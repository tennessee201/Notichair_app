<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/background2"
    tools:context=".sevendays_fragment">

    <Space
        android:layout_width="match_parent"
        android:layout_height="62dp" />

    <TableLayout
        android:layout_width="300dp"
        android:layout_height="492dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/mon"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:background="#63A561"
                android:gravity="center"
                android:text="월요일"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/mon_time"
                android:layout_width="200dp"
                android:layout_height="65dp"
                android:background="#63A561"
                android:gravity="center"
                android:text="04:37"
                android:textSize="30sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tue"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:gravity="center"
                android:text="화요일"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tue_time"
                android:layout_width="200dp"
                android:layout_height="65dp"
                android:gravity="center"
                android:text="05:31"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/wed"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:background="#63A561"
                android:gravity="center"
                android:text="수요일"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/wed_time"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:background="#63A561"
                android:gravity="center"
                android:text="11:09"
                android:textSize="30sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/thu"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:gravity="center"
                android:text="목요일"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/thu_time"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:gravity="center"
                android:text="03:02"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/fri"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:background="#63A561"
                android:gravity="center"
                android:text="금요일"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/fri_time"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:background="#63A561"
                android:gravity="center"
                android:text="09:43"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/sat"
                android:layout_width="100dp"
                android:layout_height="65dp"
                android:gravity="center"
                android:text="토요일"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/sat_time"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:gravity="center"
                android:text="06:45"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/sun"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:background="#63A561"
                android:gravity="center"
                android:text="일요일"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/sun_time"
                android:layout_width="200dp"
                android:layout_height="65dp"
                android:background="#63A561"
                android:gravity="center"
                android:text="01:56"
                android:textSize="30sp" />
        </TableRow>

    </TableLayout>

</LinearLayout>